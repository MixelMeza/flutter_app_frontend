<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
      This drawable wraps the generated mipmap `ic_launcher` and centers it with insets
      so the foreground is visually centered and doesn't touch the adaptive icon mask.
      Adjust the inset values (dp) if you want the foreground larger/smaller.
    -->
    <item>
        <inset
            android:insetLeft="16dp"
            android:insetTop="16dp"
            android:insetRight="16dp"
            android:insetBottom="16dp">
            <bitmap
                android:src="@mipmap/ic_launcher"
                android:gravity="center" />
        </inset>
    </item>
</layer-list>
